<% include partials/header.ejs %>
<a class="float-right" href="/" title="Add a New User">Add a Query</a>    
<div class="table-wrapper">
        <% if (booking_queries.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <!-- <th scope="col">Image</th> -->
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Contact-Number</th>                        
                        <th scope="col">Number of Guest</th>
                        <th scope="col">Username</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% booking_queries.forEach((User, index) => { %>
                        <tr>
                            <th scope="row"><%= User.id %></th>
                            <!-- <td><img src="/assets/img/<%= User.image %>" class="rounded-circle User-img" alt=""></td> -->
                            <td><%= User.firstname %></td>
                            <td><%= User.lastname %></td>
                            <td><%= User.email %></td>
                            <td><%= User.mobile_number %></td>
                            <td><%= User.no_of_guests %></td>
                            <td>@<%= User.username %></td>
                            <td><%= User.check_in %></td>
                            <td><%= User.check_out %></td>
                            <td>
                                <a href="/edit/<%= User.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= User.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No booking_queries found. Go <a href="/add" >here</a> to add booking_queries.</p>
        <% } %>
    </div>
</div>
</body>
</html>